{
  "name": "starter-kit",
  "version": "1.0.0",
  "description": "Starter kit for side projects, hackathons, etc.",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "npx parcel build src/index.html --out-dir ./dist",
    "local-dev:client": "npx parcel src/index.html --out-dir ./dist -p 3000",
    "local-dev:server": "npx nodemon src/server/index.js --watch src/server --exec babel-node --presets @babel/preset-env",
    "local-dev": "concurrently \"npm:local-dev:*\"",
    "docker:build": "docker build -t starter-kit .",
    "docker:run": "docker run --name starter-kit -p 8080:80 --rm starter-kit",
    "test:e2e": "npx cypress run",
    "hyper:setup": "./scripts/hyper/setup.sh",
    "deploy": "./scripts/hyper/deploy.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "author": "Domenic Matesic <domenic.matesic@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "deepmerge": "^3.0.0",
    "hyperapp": "^1.2.9",
    "lodash": "^4.17.11",
    "restify": "^7.3.0",
    "restify-cors-middleware": "^1.1.1",
    "tabletop": "^1.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.2.0",
    "concurrently": "^4.1.0",
    "cypress": "^3.1.3",
    "husky": "^1.2.0",
    "nodemon": "^1.18.8",
    "parcel": "^1.10.3",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "tailwindcss": "^0.7.2"
  }
}
